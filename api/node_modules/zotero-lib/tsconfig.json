{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "declaration": true,
        "importHelpers": true,
        "target": "es2017",
        "disableSizeLimit": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": false,
        "sourceMap": false,
        "downlevelIteration": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ]
    },
    "include": [
        "bin"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "typings"
    ]
}